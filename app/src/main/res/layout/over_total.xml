<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <View
              android:layout_width="2dp"
              android:id="@+id/verticalL"
              android:visibility="visible"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginStart="@dimen/_10sdp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_height="@dimen/_25sdp"
              android:background="@color/white" />

          <TextView
              android:layout_width="wrap_content"
              android:text="43 rd"
              android:layout_marginStart="0dp"
              app:layout_constraintStart_toEndOf="@+id/verticalL"
              android:id="@+id/overNumber"
              app:layout_constraintBottom_toBottomOf="@+id/verticalL"
              app:layout_constraintTop_toTopOf="@+id/verticalL"
              android:textColor="@color/white"
              android:layout_height="wrap_content"/>

          <TextView
              android:layout_width="wrap_content"
              android:text="r"
              app:layout_constraintTop_toTopOf="@+id/verticalL"
              android:visibility="gone"
              android:textSize="@dimen/_8sdp"
              android:layout_marginStart="@dimen/_5sdp"
              android:id="@+id/overRuns"
              app:layout_constraintStart_toEndOf="@+id/overNumber"
              android:textColor="@color/white"
              android:layout_height="wrap_content"/>

      </androidx.constraintlayout.widget.ConstraintLayout>


</layout>